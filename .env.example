# CUMAPP Environment Configuration

# Application Settings
APP_NAME=CUMAPP
PORT=8000
DEBUG=True

# TextVerified API Configuration
TEXTVERIFIED_API_KEY=your_textverified_api_key_here
TEXTVERIFIED_EMAIL=your_email@example.com

# Twilio API Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Mock Twilio (set to "false" to use real Twilio when available)
USE_MOCK_TWILIO=true

# Database Configuration
DATABASE_URL=sqlite:///./cumapp.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=CumApp2024SecureJWTKeyForProductionUse32Chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Groq AI Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_PER_MINUTE=60